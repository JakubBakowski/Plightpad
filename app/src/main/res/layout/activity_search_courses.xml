<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_courses_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SearchCoursesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/search_courses_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/guillotine_actionbar_background_view_height"
            android:layout_gravity="top"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/search_courses_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/search_courses_toolbar"
                style="@style/Toolbar"
                android:elevation="24dp"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/search_courses_content_hamburger"
                    style="@style/ImageView.Hamburger"
                    android:src="@drawable/ic_menu_90" />

                <com.plightpad.widget.CanaroTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/guillotine_item_text_size" />
            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <ListView
            android:id="@+id/search_courses_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_courses_bar_view"
            android:layout_marginTop="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:scrollbars="none" />

    </RelativeLayout>


</FrameLayout>
